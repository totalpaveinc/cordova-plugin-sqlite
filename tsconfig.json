{
    "compilerOptions": {
        "target": "ES2017",
        "lib": ["DOM", "ES2017"],
        "module": "ES2015",
        "declaration": true,
        "sourceMap": true,
        "outDir": "./www",
        "importHelpers": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "plugins": [],
        "incremental": true
    },
    "exclude": [
        "**/*.spec.ts",
        "*/.spec.ts",
        "test",
        "lib",
        "spec",
        "node_modules",
        "jest.config.ts",
        "./www"
    ]
}
